{
  "$schema" : "https:\/\/schema.linearmouse.app\/0.10.0",
  "schemes" : [
    {
      "pointer" : {
        "acceleration" : 1,
        "disableAcceleration" : true,
        "speed" : 0
      },
      "if" : {
        "device" : {
          "productID" : "0xc548",
          "productName" : "USB Receiver",
          "category" : "mouse",
          "vendorID" : "0x46d"
        }
      },
      "scrolling" : {
        "acceleration" : 1,
        "distance" : {
          "horizontal" : "36px",
          "vertical" : "61.7px"
        },
        "speed" : 0
      }
    },
    {
      "if" : {
        "device" : {
          "category" : "trackpad",
          "vendorID" : "0x5ac",
          "productID" : "0x343",
          "productName" : "Apple Internal Keyboard \/ Trackpad"
        }
      },
      "scrolling" : {
        "reverse" : {
          "vertical" : true
        },
        "speed" : {
          "vertical" : 0
        },
        "acceleration" : {
          "vertical" : 1
        },
        "distance" : {
          "vertical" : "auto"
        }
      }
    }
  ]
}