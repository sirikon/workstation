{
  "editor.detectIndentation": false,
  "editor.tabSize": 2,
  "deno.enable": true,
  "deno.config": "./src/cli/deno.json",
  "deno.importMap": "./src/cli/import_map.json",
  "deno.cache": "./deno/cache",
  "shellcheck.enable": true,
  "shellcheck.customArgs": ["--exclude", "SC2155,SC1090,SC2002"],
  "[json]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[typescript]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[python]": {
    "editor.tabSize": 4
  }
}
